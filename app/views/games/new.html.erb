<h1>New Game</h1>
<p><% @letters.each do |letter| %>
<span><%= letter %> </span>
<% end %>
</p>

<form action="/score" method="post" data-turbo="false">
    <div class="row">
      <div class="col">
        <input type="text" name="result" class="form-control" aria-label="Result">
      </div>
      <div class="col">
        <input class="btn btn-primary" type="submit" value="Send Result!">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <%= hidden_field_tag :start, @start %>
    </div>
  </form>
